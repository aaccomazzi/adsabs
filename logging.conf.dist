[loggers]
keys=root

[handlers]
keys=console,file

[formatters]
keys=simple,verbose

[logger_root]
level=INFO
handlers=console,file

[handler_console]
class=StreamHandler
formatter=simple
args=(sys.stdout,)

[handler_file]
class=FileHandler
formatter=verbose
args=("logs/adsabs.log",)

[formatter_simple]
format=%(asctime)s - %(levelname)s - %(message)s
datefmt=

[formatter_verbose]
format=%(levelname)s %(asctime)s %(module)s %(process)d %(thread)d %(message)s
